<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:Spice86.ViewModels"
             xmlns:converters="clr-namespace:Spice86.Converters"
             mc:Ignorable="d" d:DesignWidth="250" d:DesignHeight="450"
             x:Class="Spice86.Views.RegistersView"
             x:DataType="viewModels:IRegistersViewModel">
    <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto">
        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="CPU Registers"
                   FontWeight="Bold"
                   Margin="0,0,0,8"
                   HorizontalAlignment="Center" />

        <!-- General Purpose Registers -->
        <Border Grid.Row="1"
                BorderBrush="{DynamicResource SystemBaseLowColor}"
                BorderThickness="1"
                CornerRadius="4"
                Padding="8"
                Margin="0,0,0,8">
            <StackPanel>
                <ItemsControl ItemsSource="{Binding GeneralRegisters}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid ColumnDefinitions="Auto,*" Margin="0,2">
                                <TextBlock Grid.Column="0"
                                           Text="{Binding Name}"
                                           FontFamily="Consolas,Menlo,Monaco,monospace"
                                           Width="40"
                                           Foreground="#78C9B0" />
                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                    <!-- General purpose 32-bit registers (EAX, EBX, etc.) upper word -->
                                    <TextBlock Text="{Binding UpperWordHex}"
                                               FontFamily="Consolas,Menlo,Monaco,monospace"
                                               Foreground="{Binding UpperWordChanged, Converter={x:Static converters:HighlightingConverter.TrueToHighlightForeground}}"
                                               Background="{Binding UpperWordChanged, Converter={x:Static converters:HighlightingConverter.TrueToHighlightBackground}}" />

                                    <!-- High byte (AH, BH, etc.) -->
                                    <TextBlock Text="{Binding HighByteHex}"
                                               FontFamily="Consolas,Menlo,Monaco,monospace"
                                               Foreground="{Binding HighByteChanged, Converter={x:Static converters:HighlightingConverter.TrueToHighlightForeground}}"
                                               Background="{Binding HighByteChanged, Converter={x:Static converters:HighlightingConverter.TrueToHighlightBackground}}"
                                               Margin="4,0,0,0" />

                                    <!-- Low byte (AL, BL, etc.) -->
                                    <TextBlock Text="{Binding LowByteHex}"
                                               FontFamily="Consolas,Menlo,Monaco,monospace"
                                               Foreground="{Binding LowByteChanged, Converter={x:Static converters:HighlightingConverter.TrueToHighlightForeground}}"
                                               Background="{Binding LowByteChanged, Converter={x:Static converters:HighlightingConverter.TrueToHighlightBackground}}"
                                               Margin="4,0,0,0" />
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Border>

        <!-- Pointer Registers -->
        <Border Grid.Row="2"
                BorderBrush="{DynamicResource SystemBaseLowColor}"
                BorderThickness="1"
                CornerRadius="4"
                Padding="8"
                Margin="0,0,0,8">
            <StackPanel>
                <ItemsControl ItemsSource="{Binding PointerRegisters}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid ColumnDefinitions="Auto,*" Margin="0,2">
                                <TextBlock Grid.Column="0"
                                           Text="{Binding Name}"
                                           FontFamily="Consolas,Menlo,Monaco,monospace"
                                           Width="40"
                                           Foreground="#78C9B0" />
                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                    <!-- Pointer registers (ESI, EDI, etc.) upper word -->
                                    <TextBlock Text="{Binding UpperWordHex}"
                                               FontFamily="Consolas,Menlo,Monaco,monospace"
                                               Foreground="{Binding UpperWordChanged, Converter={x:Static converters:HighlightingConverter.TrueToHighlightForeground}}"
                                               Background="{Binding UpperWordChanged, Converter={x:Static converters:HighlightingConverter.TrueToHighlightBackground}}" />

                                    <!-- Pointer registers (ESI, EDI, etc.) lower word -->
                                    <TextBlock Text="{Binding LowerWordHex}"
                                               FontFamily="Consolas,Menlo,Monaco,monospace"
                                               Foreground="{Binding LowerWordChanged, Converter={x:Static converters:HighlightingConverter.TrueToHighlightForeground}}"
                                               Background="{Binding LowerWordChanged, Converter={x:Static converters:HighlightingConverter.TrueToHighlightBackground}}"
                                               Margin="4,0,0,0" />

                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Border>

        <!-- Segment Registers -->
        <Border Grid.Row="3"
                BorderBrush="{DynamicResource SystemBaseLowColor}"
                BorderThickness="1"
                CornerRadius="4"
                Padding="8"
                Margin="0,0,0,8">
            <StackPanel>
                <ItemsControl ItemsSource="{Binding SegmentRegisters}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Grid ColumnDefinitions="Auto,*" Margin="0,2">
                                <TextBlock Grid.Column="0"
                                           Text="{Binding Name}"
                                           FontFamily="Consolas,Menlo,Monaco,monospace"
                                           Width="40"
                                           Foreground="#78C9B0" />
                                <StackPanel Grid.Column="1" Orientation="Horizontal">
                                    <!-- For Segment registers always show 16 bit -->
                                    <TextBlock Text="{Binding LowerWordHex}"
                                               FontFamily="Consolas,Menlo,Monaco,monospace"
                                               Foreground="{Binding LowerWordChanged, Converter={x:Static converters:HighlightingConverter.TrueToHighlightForeground}}"
                                               Background="{Binding LowerWordChanged, Converter={x:Static converters:HighlightingConverter.TrueToHighlightBackground}}" />
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Border>

        <!-- Flags -->
        <Border Grid.Row="4"
                BorderBrush="{DynamicResource SystemBaseLowColor}"
                BorderThickness="1"
                CornerRadius="4"
                Padding="8">
            <StackPanel>
                <TextBlock Text="Flags"
                           FontWeight="SemiBold"
                           Margin="0,0,0,4" />
                <ItemsControl ItemsSource="{Binding Flags}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="2"
                                    Padding="4,2"
                                    BorderThickness="1"
                                    BorderBrush="{DynamicResource SystemBaseLowColor}"
                                    CornerRadius="2"
                                    Background="{Binding HasChanged, Converter={x:Static converters:HighlightingConverter.TrueToHighlightBackground}}">
                                <TextBlock Text="{Binding Name}"
                                           FontFamily="Consolas,Menlo,Monaco,monospace"
                                           Foreground="{Binding Value, Converter={x:Static converters:HighlightingConverter.TrueToHighlightForeground}}"
                                           FontWeight="{Binding Value, Converter={x:Static converters:HighlightingConverter.TrueToBold}}" />
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
